{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
    <br />
    <h3>Ordenar por: </h3> - 
    <a href="{{ path('app_user_money')}}">Saldo actual</a> -
    <a href="{{ path('app_user_totalInvest')}}">Gasto total</a> -
    <a href="{{ path('app_user_winnerTickets')}}">Victorias totales</a> 
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Money</th>
                <th>TotalProfit</th>
                <th>Total_invested</th>
                <th>actions</th>
                <th>Total Wins</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.money }}</td>
                <td>{{ user.totalProfit }}</td>
                <td>{{ user.totalInvested }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
                <td>{{ user.totalWins }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_main') }}">Back to main</a>
{% endblock %}
